<Window x:Class="TrackThat.AccessKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackThat"
        mc:Ignorable="d"
        Title="Access Key" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" Margin="10">
            Enter Access Key:    
        </Label>
        <TextBox x:Name="uxAccessKeyTxt" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
        <Button Grid.Row="2" Margin="15" x:Name="uxSubmitBtn" Click="uxSubmitBtn_Click">
            Submit
        </Button>
    </Grid>
</Window>
