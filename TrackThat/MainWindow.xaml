<Window x:Class="TrackThat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackThat"
        mc:Ignorable="d"
        Title="TrackThat" Height="450" Width="800">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <RadioButton Grid.Row="0" GroupName="Couriers" Content="UPS" Margin="5"/>
            <RadioButton Grid.Row="0" GroupName="Couriers" Content="USPS" Margin="5"/>
            <RadioButton Grid.Row="0" GroupName="Couriers" Content="FedEx" Margin="5"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" Margin="10">
            <Label Content="Tracking number:"/>
            <TextBox x:Name="uxTracking" MinHeight="20pt" MinWidth="100pt" Margin="5"/>
            <Button x:Name="uxGetInfo" Content="Get Status" Background="Azure" Margin="5"/>
        </StackPanel>
        <ListBox Grid.Row="2" ItemsSource="{Binding Path=ShipInfoList}" Height="100" Name="uxShipmentList"/>
    </Grid>
</Window>
